shader(type = fragment);

resource(id = 2) const texture font_image[1];
input(id = 0) vec2 vertex_uv;
input(id = 1) vec4 vertex_colour;
input(id = 2, flat) uint vertex_texture_id;
output(id = 0) vec4 frag_colour;

void main()
{
	frag_colour = vertex_colour.rgba * texture(font_image[vertex_texture_id], vertex_uv).a;
}
