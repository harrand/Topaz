#pragma shader_stage(vertex)

vec2 positions[3] = vec2[]
(
    vec2(0.0, 0.5),
    vec2(0.5, -0.5),
    vec2(-0.5, -0.5)
);

vec3 colours[3] = vec3[]
(
	vec3(1.0, 0.0, 0.0),
	vec3(0.0, 1.0, 0.0),
	vec3(0.0, 0.0, 1.0)
);

layout(location = 0) out vec3 frag_colour;

void main()
{
    gl_Position = vec4(positions[tz_VertexID], 0.0, 1.0);
    frag_colour = colours[tz_VertexID];
}
