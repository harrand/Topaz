shader(type = vertex);

vec2 positions[3] = vec2[]
(
    vec2(0.0, 0.5),
    vec2(0.5, -0.5),
    vec2(-0.5, -0.5)
);

vec3 colours[3] = vec3[]
(
	vec3(1.0, 0.0, 0.0),
	vec3(0.0, 1.0, 0.0),
	vec3(0.0, 0.0, 1.0)
);

output(id = 0) vec3 frag_colour;

void main()
{
    output::position = vec4(positions[input::vertex_id], 0.0, 1.0);
    frag_colour = colours[input::vertex_id];
}
