shader(type = vertex);

vec2 positions[3] = vec2[]
(
    vec2(0.0, 0.5),
    vec2(0.5, -0.5),
    vec2(-0.5, -0.5)
);

resource(id = 0) buffer ColourData
{
	vec4 colours[4];
} buf;

output(id = 0) vec4 frag_colour;

void main()
{
    out::position = vec4(positions[in::vertex_id], 0.0, 1.0);
    frag_colour = buf.colours[in::vertex_id];
}
