shader(type = fragment);

resource(id = 0) const texture tex[1];
input(id = 0) vec2 texcoord;
output(id = 0) vec4 frag_colour;

void main()
{
	vec2 texc = texcoord;
	#if TZ_OGL
		texc.y = 1.0 - texc.y;
	#endif
	vec4 col = texture(tex[0], texc);
	float frag_x = in::fragment_coord.x;
	if(frag_x > 400.0)
	{
		frag_colour = vec4(1.0) - col;
		frag_colour.w = 1.0;
	}
	else
	{
		frag_colour = col;
	}
}
