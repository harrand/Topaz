shader(type = vertex);

struct TriangleVertexData
{
    vec3 position;
    vec2 texcoord;
};

resource(id = 0) buffer VertexData
{
    TriangleVertexData[] vertices;
} vertex_data;

output(id = 0) vec2 texcoord;

void main() {
    TriangleVertexData cur_vertex = vertex_data.vertices[input::vertex_id];
    output::position = vec4(cur_vertex.position, 1.0);
    texcoord = cur_vertex.texcoord;
}
