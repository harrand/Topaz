#pragma shader_stage(vertex)

#if TZ_OGL
int tz_vertex_id = gl_VertexID;
#elif TZ_VULKAN
int tz_vertex_id = gl_VertexIndex;
#endif

layout (location = 0) out vec2 out_texcoord;
void main()
{
    out_texcoord = vec2((tz_vertex_id << 1) & 2, tz_vertex_id & 2);
    gl_Position = vec4(out_texcoord * 2.0f + -1.0f, 0.0f, 1.0f);
}